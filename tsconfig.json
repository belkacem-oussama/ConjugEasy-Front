{
    "compilerOptions": {
        "target": "ES2015",
        "allowJs": true,
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "jsx": "react-jsx",
        "noEmitOnError": true,
        "resolveJsonModule": true
    },

    "include": ["src/**/*.tsx"]
}
